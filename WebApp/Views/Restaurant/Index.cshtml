@model IEnumerable<WebApp.Models.RestaurantVM>

@{
    ViewData["Title"] = "Restaurants";
}

<div class="col-md-12">
    <!-- Displays the search bar -->
    <input type="text" id="search" class="form-control" onkeyup="search()" placeholder="Search for restaurant, villages or categoires">
    <!-- Displays the different restaurants -->
    @foreach (var item in Model)
    {
        <div class="card mb-3">
            <img class="card-img-top" src="~/images/@Html.DisplayFor(modelItem => item.RestaurantImage)" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(modelItem => item.RestaurantName) | @Html.DisplayFor(modelItem => item.RestaurantCategory)</h5>
                <p class="card-text">@Html.DisplayFor(modelItem => item.ResaurantAddress)<br />@Html.DisplayFor(modelItem => item.RestaurantCity) </p>
                <a href="@Url.Action("Dishes", new { idRestaurant = item.RestaurantId })" style="background: #ff0000; color: #fff; padding: 10px; text-align: center; text-decoration: none; border-radius: 5px; width: 35px;"><i class="fa fa-bars"></i>Dishes</a>
            </div>
        </div>
    }
</div>