@model CollectionDataModel

@{
    ViewData["Title"] = "Confirmation";
}

<div class="col-md-12">
    <div class="row">
        <div class="col">
            <h4>Personal Details</h4>
            <hr />
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <th>
                            Name
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.personalDetails.NameCustomer)
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Address
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.personalDetails.AddressCustomer)
                        </td>
                    </tr>
                    <tr>
                        <th>
                            City
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.personalDetails.CityCustomer)
                        </td>
                    </tr>
                    <tr>
                        <th>
                            District
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.personalDetails.DistrictCustomer)
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col">
            <h4>Order Details</h4>
            <hr />
            <table class="table table-striped">
                <thead class="thead-light">
                    <tr>
                        <th>
                            Dish
                        </th>
                        <th>
                            Price
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.shoppingCartVMs)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.DishQuantity)x @Html.DisplayFor(modelItem => item.DishName)
                            </td>
                            <td class="total">
                                @Html.DisplayFor(modelItem => item.PriceDishTotal)
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot class="tfoot-light">
                    <tr>
                        <td>Summe</td>
                        <td id="sum"></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
    <form asp-action="Order">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group" id="confirmation">
            <label for="time" class="control-label">Choose the delivery time</label><br />
            <input type="time" id="deliveryTime" name="DeliveryTime" class="time" />
            <input type="submit" value="Order" class="btn btn-primary" id="btnconfirmation" />
        </div>
    </form>
</div>