<!-- Looks up the controller name and then returns the correct layout -->
@{
    string CurrentControllerName = ViewContext.RouteData.Values["controller"].ToString();
    switch (CurrentControllerName)
    {
        case "Employee":
            Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
            break;
        case "Login":
            Layout = "~/Views/Shared/_LayoutLogin.cshtml";
            break;
        case "Register":
            Layout = "~/Views/Shared/_LayoutRegister.cshtml";
            break;
        default:
            Layout = "~/Views/Shared/_Layout.cshtml";
            break;
    }
}
