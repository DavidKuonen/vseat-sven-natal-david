@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VSEAT</title>
    <!-- CSS Files -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- Google Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <nav class="navbar navbar-expand-md">
        <!-- Brand -->
        <a class="navbar-brand" asp-area="" asp-controller="Restaurant" asp-action="Index"><img src="~/images/vseatlogo.png" class="navlogo" /></a>

        <!-- Toggler/collapsibe Button -->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>



        <div class="collapse navbar-collapse" id="collapsibleNavbar">

        </div>
        <!-- Navbar links -->
        <!--
    <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Restaurant" asp-action="Index">Restaurants</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Link</a>
            </li>
        </ul>
    </div>
    -->
        <div style="margin-top: 20px;">
            <div style="float: right;">
                <a class="navbar-cart" asp-area="" asp-controller="Cart" asp-action="Index"><i class="fa fa-shopping-cart" style="margin-left: 15px;"></i></a>
                <a class="navbar-cart" asp-area="" asp-controller="Customer" asp-action="Index"><i class="fa fa-user" style="margin-left: 15px;"></i></a>
                <a class="navbar-cart" asp-area="" asp-controller="Login" asp-action="Logout"><i class="fa fa-sign-out" style="margin-left: 15px;"></i></a>
            </div>
            <br />
            <p style="float: right; margin-top: 5px;">You are logged in as:&nbsp;<b>@HttpContextAccessor.HttpContext.Session.GetString("_NameCustomer")</b></p>
        </div>
    </nav>

    <div class="container py-5">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
